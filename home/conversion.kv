#:import Conversion home.conversion.Conversion

<Conversion>:
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        spacing: 40
        pos_hint: {"center_y":.5}
        BoxLayout:
            spacing: 10
            MDLabel:
                text: "Octal:"
                halign: "right"
            MDLabel:
                id: octal
                text: "8"
                halign: "left"
        BoxLayout:
            spacing: 10
            MDLabel:
                text: "Hexadecimal:"
                halign: "right"
            MDLabel:
                id: hexadecimal
                text: "16"
                halign: "left"
        BoxLayout:
            spacing: 10
            MDLabel:
                text: "Decimal:"
                halign: "right"
            MDLabel:
                id: decimal
                text: "10"
                halign: "left"
        BoxLayout:
            spacing: 10
            MDLabel:
                text: "Binary:"
                halign: "right"
            MDLabel:
                id: binary
                text: "2"
                halign: "left"
        MDTextField:
            id: data
            on_hint_text: "Binary"
            size_hint_x: .8
            pos_hint: {"center_x":.5}
        MDDropDownItem:
            id: item
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: "Binary"
            on_release: app.show_dialog(item)
        MDRaisedButton:
            text: "Convert"
            on_release: root.conversion(data.text, item.text)
            pos_hint: {"center_x":.5}

<Content>:
    spacing: "12dp"
    size_hint_y: None
    height: "240dp"
    orientation: "vertical"
    OneLineListItem:
        text: "Binary"
        on_release: app.change_dataType(self.text, root.item)
    OneLineListItem:
        text: "Decimal"
        on_release: app.change_dataType(self.text, root.item)
    OneLineListItem:
        text: "Hexadecimal"
        on_release: app.change_dataType(self.text, root.item)
    OneLineListItem:
        text: "Octal"
        on_release: app.change_dataType(self.text, root.item)
